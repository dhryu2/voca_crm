# ============================================
# VocaCRM API Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to git!
# ============================================

# ============================================
# Application Settings
# ============================================
APP_NAME=voca_crm_api
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# ============================================
# Database Settings (PostgreSQL)
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=voca_crm
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# ============================================
# Redis Settings (Session Management)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Security (Required)
# ============================================
# JWT 토큰 서명용 시크릿 키 (필수)
# 최소 32자 이상의 복잡한 문자열 사용 권장
# 예: openssl rand -base64 32 명령으로 생성
JWT_SECRET=your_secure_jwt_secret_key_minimum_32_characters_here

# ============================================
# DeepL API Key (Required)
# ============================================
DEEPL_API_KEY=your_deepl_api_key_here

# ============================================
# Logging
# ============================================
# LOG_LEVEL=INFO

# ============================================
# CORS (Optional)
# ============================================
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# Docker Image
# ============================================
# Docker Hub 이미지 경로
# 형식: DOCKERHUB_USERNAME/IMAGE_NAME:TAG
DOCKER_IMAGE=YOUR_DOCKERHUB_USERNAME/voca-crm-api:latest
